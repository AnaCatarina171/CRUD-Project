@model List<DBProgramming3.Models.Incident>

@{
    ViewBag.Title = "IncidentList";
}

<link rel="stylesheet" href="~/Content/StyleSheet1.css" />
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;300;400;500;600;800&display=swap" rel="stylesheet">

<div class="row">
    <div class="col-md-7">
        <h2 class="mainHeader">Indidents List</h2>
    </div>
    <div class="col-md-2"></div>
    <div class="col-md-3">
        <div class="searchContainer">
            <label class="searchLabel">Search By:</label>
            <input type="text" name="searchText" list="searchList" />
            <datalist id="searchList" placeholder="Search By:">
                <option value="ID"></option>
                <option value="Title"></option>
                <option value="Date Opened"></option>
                <option value="Date Closed"></option>
                <option value="Customer"></option>
                <option value="Product"></option>
            </datalist>
            <input type="text" id="searchTerm" class="searchTerm" placeholder="Search..." />
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table id="stateList" class="styled-table">
            <thead>
                <tr>
                    <th>Incident ID</th>
                    <th>Title</th>
                    <th>Date Opened</th>
                    <th>Date Closed</th>
                    <th>Customer Name</th>
                    <th>Product Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var incident in Model)
                {
                    <tr>
                        <td>@incident.IncidentID</td>
                        <td>@incident.Title</td>
                        <td>@incident.DateOpened.ToShortDateString()</td>
                        @if (!@incident.DateClosed.HasValue)
                        {
                            <td>Still Open</td>
                        }
                        else
                        {
                            <td>@incident.DateClosed.ToString().Substring(0, 10)</td>
                        }
                        <td>@incident.Customer.Name</td>
                        <td>@incident.Product.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>